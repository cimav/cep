.container
  %h1 Reuniones
  .collection
    -@meetings.each do |meeting|
      =link_to meeting, class:'collection-item avatar' do
        -if meeting.status == Meeting::OPENED
          %i.fa.fa-unlock.circle.blue{"aria-hidden" => "true"}
        -else
          %i.fa.fa-lock.circle{"aria-hidden" => "true"}

        %span.title
        =meeting.date.day
        \/
        =get_month_name(meeting.date.month.to_i).capitalize
        \/
        =meeting.date.year
        %p
          =meeting.get_type
          %br/
          =meeting.get_status
        / Element Showed


