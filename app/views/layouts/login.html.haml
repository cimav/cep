    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    .slider.fullscreen
      %ul.slides
        %li
          = image_tag "cimav-6.jpg", class: 'slide-image'
        %li
          = image_tag "cimav-37.jpg", class: 'slide-image'
        %li
          = image_tag "cimav-39.jpg", class: 'slide-image'

    = yield
    :javascript
      $(document).ready(function(){
          $('.slider').slider({indicators: false});
      });
