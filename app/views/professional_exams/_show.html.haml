
.section.valign-wrapper
  .row
    .col.l3.m3
      %a.expediente-trigger{"data-remote"=>"true", href:"agreements/#{agreeable.id}/student_record/#{agreeable.student_id}"}
        %img.student-img.responsive-img.circle.tooltipped{src:"http://posgrado.cimav.edu.mx/imagen/estudiante/#{agreeable.student.id}","data-position"=>"bottom", "data-delay"=>"80", "data-tooltip"=>"Ver expediente de estudiante"}
    .col.l7.m7
      .larger-text
        =agreeable.student.full_name
      %p
        %b
          Matr√≠cula
        =agreeable.student.card
        %br
        %b
          Programa:
        =agreeable.student.program.name
        %br
        %b
          Estatus:
        =agreeable.student.get_status
        %br
        %b
          Campus:
        =agreeable.student.campus.name
        %br
        %b
          Fecha de examen:
        =agreeable.exam_date.strftime("%d %B, %Y") rescue "No se ha agendado"
