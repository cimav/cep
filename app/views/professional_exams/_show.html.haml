
.card-panel.z-depth-2
  .row
    .col.l3.l3
      %img.student-img.responsive-img.circle.tooltipped{src:"http://posgrado.cimav.edu.mx/imagen/estudiante/#{agreeable.student.id}","data-position"=>"bottom", "data-delay"=>"80", "data-tooltip"=>"Ver expediente de estudiante"}
    .col.l9.m9
      .larger-text
        =agreeable.student.full_name
      %p
        %b
          MatrÃ­cula
        =agreeable.student.card
        %br
        %b
          Programa:
        =agreeable.student.program.name
        %br
        %b
          Estatus:
        =agreeable.student.get_status
        %br
        %b
          Campus
        =agreeable.student.campus.name
        %br
        %b
          Fecha de inicio:
        =agreeable.student.start_date
        %br
        %b
          Fecha de examen:
        =agreeable.exam_date.strftime("%d %B, %Y") rescue "No se ha agendado"
      .card-action
        %a#documentos-trigger.btn-floating.tooltipped.purple{"data-position"=>"bottom", "data-delay"=>"80", "data-tooltip"=>"Documentos", "data-remote"=>"true", href:"/agreements/#{agreeable.agreement.id}/files"}
          %i.fa.fa-folder{"aria-hidden"=>true}
        %a#expediente-trigger.btn-floating.tooltipped.purple{"data-position"=>"bottom", "data-delay"=>"80", "data-tooltip"=>"Expediente de estudiante", "data-remote"=>"true", href:"agreements/#{agreeable.id}/student_record/#{agreeable.student_id}"}
          %i.fa.fa-book{"aria-hidden"=>true}




#modalDocumentos.modal.bottom-sheet
  .modal-content
    %h4 Documentos
    #preloader-documentos.center
      .preloader-wrapper.big.active
        .spinner-layer.spinner-blue-only
          .circle-clipper.left
            .circle
          .gap-patch
            .circle
          .circle-clipper.right
            .circle
    #agreement_files
  .modal-footer
    %a.modal-action.modal-close.waves-effect.waves-green.btn-flat Cerrar

#modalExpediente.modal
  .modal-content
    #preloader-expediente.center
      .preloader-wrapper.big.active
        .spinner-layer.spinner-blue-only
          .circle-clipper.left
            .circle
          .gap-patch
            .circle
          .circle-clipper.right
            .circle
    #expediente
  .modal-footer
    %a.modal-action.modal-close.waves-effect.waves-green.btn-flat Cerrar



